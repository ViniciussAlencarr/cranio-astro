---
import Layout from '../layouts/Layout.astro';
import { HomeImg01, HomeImg02, HomeImg03 } from '../utils/getSvgIcons'
---

<Layout title="Home">
	<div class="py-3 px-5 sm:px-7 md:px-14 xl:py-8 xl:px-14 h-full ">
		<div class="items-center flex flex-col 2xl:flex-row justify-between">
