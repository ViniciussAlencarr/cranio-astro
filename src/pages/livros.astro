---
import { RenderBooks } from '../components/React/RenderBooks'
import Layout from '../layouts/Layout.astro'

const baseUrl = import.meta.env.BASE_URL_API
---

<Layout title="Livros">
	<div class="py-3 px-5 sm:px-7 md:px-14 xl:px-14 h-full">
        <div class="mb-2 md:mb-4 2xl:mb-6 font-medium text-[18px] sm:text-[24px] md:text-[30px] 2xl:text-[35px]">Compre por tema</div>
        <RenderBooks baseUrl={baseUrl} client:load />
    </div>
</Layout>