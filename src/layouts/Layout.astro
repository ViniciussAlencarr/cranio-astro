---
import Footer from "../components/Astro/Footer.astro";
import { Header } from "../components/React/Header";
import { RenderBooksBySearch } from "../components/React/RenderBooksBySearch";

interface Props {
	title: string;
}

const { title } = Astro.props;
const baseUrl = import.meta.env.BASE_URL_API

const { pathname,search, } = Astro.url

---

<!doctype html>
<html lang="en" class="h-full min-w-[300px]">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta
			http-equiv="Content-Security-Policy"
			content="upgrade-insecure-requests"
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />

		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			rel="stylesheet"
			href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&display=swap"
		/>
		<link rel="stylesheet" href="index.css" />
		<title>{title}</title>
	</head>
	<body class="min-w-[300px] bg-[#f4f4f4] flex-col flex h-screen">
		<header>
			<Header client:load />
		</header>
		<main id="slot-main" class="flex-1">
			<slot />
		</main>
		<main id="search-main" class="flex-1 hidden">
			<RenderBooksBySearch client:only baseUrl={baseUrl} />
		</main>
		<footer id="home-footer">
			<Footer />
		</footer>
	</body>
</html>
