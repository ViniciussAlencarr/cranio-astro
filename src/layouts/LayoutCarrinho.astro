---
import { AiOutlineSafety } from "react-icons/ai";
import { IoReorderThreeOutline } from "react-icons/io5";
import Footer from "../components/Astro/Footer.astro";
import { LogoIcon } from "../utils/getSvgIcons";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
		<meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests" />

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link rel="stylesheet" href="index.css">
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&display=swap"
        />
        <title>{title}</title>
    </head>
    <body class="min-w-[300px] bg-[#f4f4f4] flex-col flex h-screen">
        <header class="flex-none">
            <div
                class="bg-[#CFDA29] relative py-3 px-5 sm:px-7 md:px-14 xl:px-14"
            >
                <div
                    class="flex flex-col sm:flex-row items-center w-full relative"
                >
                    <div
                        class="flex-1 justify-between sm:justify-center flex items-center w-full"
                    >
                        <div
                            class="block cursor-pointer z-20 lg:hidden xl:hidden"
                        >
                            <IoReorderThreeOutline
                                className="w-[38px] h-[38px] sm:w-[45px] sm:h-[45px] md:w-[50px] md:h-[50px]"
                            />
                        </div>
                        <div class="flex-1 justify-center flex">
                            <a href="/" class=""
                                ><LogoIcon
                                    className="w-[150px] sm:w-[160px] md:w-[180px] xl:w-[200px]"
                                /></a>
                        </div>
                    </div>
                    <div class="flex flex-row items-center md:absolute right-0">
                        <div><AiOutlineSafety size={30} /></div>
                        <div class="ml-3">Sua compra Ã© <b>100 segura</b></div>
                    </div>
                </div>
            </div>
        </header>
        <main class="flex-1">
            <slot />
        </main>
        <footer class="flex-none">
            <Footer />
        </footer>
    </body>
</html>